<style>
    @font-face {
    font-family: 'Funny Sunshine';
    src: url('/fonts/FUNNY SUNSHINE.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  h1,
  h3,
  h4 {
    font-size: 10rem;
    line-height: 8rem;
    stroke: yellow;
    text-shadow:
      2px 0 #e5b400,
      -2px 0 #e5b400,
      0 2px #e5b400,
      0 -2px #e5b400,
      1px 1px #e5b400,
      -1px -1px #e5b400,
      1px -1px #e5b400,
      -1px 1px #e5b400;
  }

    #banner {
        width: 100vw;
        height: 100vh;
        background-image: url('../../public/bg.png');
        background-position: right;
        background-repeat: no-repeat;
        background-size: contain;
    }

    .meetduckie {
        font-size: 7rem;
        line-height: 1;
        margin-bottom: 0;
        padding: 0;
        color: white;
        font-family: 'Funny Sunshine';

        stroke: yellow;
    text-shadow:
      2px 0 #e5b400,
      -2px 0 #e5b400,
      0 2px #e5b400,
      0 -2px #e5b400,
      1px 1px #e5b400,
      -1px -1px #e5b400,
      1px -1px #e5b400,
      -1px 1px #e5b400;
    }

    p {
        color: rgb(71, 71, 71);
    stroke: rgb(47, 47, 47);
    }
</style>